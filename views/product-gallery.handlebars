{{!-- {{ > category.nav }}
{{#each product as |product| }}
{{ > product-card }}
{{/each}} --}}
<!DOCTYPE html>
<html lang="en">

  <head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/reset.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="/css/jass.css" />
    <title>Sweet Solution</title>
  </head>

  <body class="d-flex h-100 text-bg-dark">
    <!-- NAVIGATION BAR -->
    <div class="d-flex" id="wrapper">
      <!-- SIDEBAR -->
      <div class="border-end p-3" id="sidebar-wrapper">
        <div class="list-group list-group-flush">
          <a class="list-group-item list-group-item-action p-3" href="#!">All Products</a>
          <a class="list-group-item list-group-item-action p-3" href="#!">Cookies</a>
          <a class="list-group-item list-group-item-action p-3" href="#!">Pies</a>
          <a class="list-group-item list-group-item-action p-3" href="#!">Cakes</a>
          <a class="list-group-item list-group-item-action p-3" href="#!">Cheesecakes</a>
          <a class="list-group-item list-group-item-action p-3" href="#!">Pastry</a>
          <a class="list-group-item list-group-item-action p-3" href="#!">Bread</a>
          <a class="list-group-item list-group-item-action p-3" href="#!">Gluten-Free</a>
          <a class="list-group-item list-group-item-action p-3" href="#!">Vegan</a>
        </div>
      </div>
      <!-- Page content wrapper-->
      <div id="page-content-wrapper">
        <!-- Page content-->
        <div class="container-fluid p-3">
          <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
            {{#each products as |product|}}
            <div class="col">
              <div class="card shadow-sm">
                <svg class="bd-placeholder-img card-img-top" width="100%" height="225"
                  xmlns="http://www.w3.org/2000/svg" role="img" aria-label="Placeholder: Thumbnail"
                  preserveAspectRatio="xMidYMid slice" focusable="false">
                  <title>{{product.product_name}}</title>
                  <rect width="100%" height="100%" fill="#55595c"></rect><text x="50%" y="50%" fill="#eceeef"
                    dy=".3em">Thumbnail</text>
                </svg>
                <div class="card-body">
                  <p class="card-text">{{product.product_name}}</p>
                  <p class="card-text">{{product.price_per}}</p>
                  <div class="d-flex justify-content-between align-items-center">
                    <div class="dropdown">
                      <button class="btn btn-sm btn-outline-secondary dropdown-toggle" type="button"
                        data-bs-toggle="dropdown" aria-expanded="false">
                        How many?
                      </button>
                      <ul class="dropdown-menu">
                        <li><a class="dropdown-item" href="#">1</a></li>
                        <li><a class="dropdown-item" href="#">2</a></li>
                        <li><a class="dropdown-item" href="#">3</a></li>
                        <li><a class="dropdown-item" href="#">4</a></li>
                        <li><a class="dropdown-item" href="#">5</a></li>
                      </ul>
                    </div>
                    <div class="btn-group">
                      <button type="button" class="btn btn-sm btn-outline-secondary">Add to Cart</button>
                    </div>
                  </div>
                </div>
              </div>
            </div>
            {{/each}}
          </div>
        </div>
      </div>





      <footer class="mt-auto text-white-50">
        <p>Cover template for <a href="https://getbootstrap.com/" class="text-white">Bootstrap</a>, by <a
            href="https://twitter.com/mdo" class="text-white">@mdo</a>.</p>
      </footer>
    </div>





  </body>

</html>