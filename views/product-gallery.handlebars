<!-- Page content wrapper-->
<h2>
  <button type="button" class="btn btn-lg py-1 px-2 active" aria-current="page" onclick="history.back()">> Back to
    Categories</button>
</h2>
<div id="page-content-wrapper">
  <!-- Page content-->
  <div class="container-fluid p-3">
    <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
      <!-- Product cards -->
      {{#each products as |product|}}
      <div class="col">
        <div class="card shadow-sm">
          <img class="product-img" width="auto" height="auto" src="/images/{{product.filename}}" role="img"
            preserveAspectRatio="xMidYMid slice" focusable="false">
          </img>
          <div class="card-body">
            <h3 class="product-card-text">{{product.product_name}}</h3>
            <p class="card-text">${{product.price_per}} each</p>
            <a type="button" class="btn btn-lg my-2" id="{{product.id}}">Add to Cart</a>
            <a type="button" class="btn btn-lg my-2" href="/review/product/{{product.id}}">See Reviews</a>
          </div>
        </div>
      </div>
      {{/each}}
    </div>
  </div>
</div>